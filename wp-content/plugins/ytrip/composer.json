{
    "name": "ytrip/ytrip-travel-booking",
    "description": "Professional travel/tourism booking system for WordPress with CodeStar Framework integration.",
    "type": "wordpress-plugin",
    "version": "2.1.0",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "wordpress",
        "travel",
        "booking",
        "tours",
        "woocommerce"
    ],
    "authors": [
        {
            "name": "YTrip",
            "homepage": "https://zakharioustours.de"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "wp-coding-standards/wpcs": "^3.0",
        "phpstan/phpstan": "^1.10",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "php-coveralls/php-coveralls": "^2.5",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "YTrip\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YTrip\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@php ./vendor/bin/phpunit"
        ],
        "test:unit": [
            "@php ./vendor/bin/phpunit --testsuite=Unit"
        ],
        "test:integration": [
            "@php ./vendor/bin/phpunit --testsuite=Integration"
        ],
        "test:security": [
            "@php ./vendor/bin/phpunit --testsuite=Security"
        ],
        "test:coverage": [
            "@php ./vendor/bin/phpunit --coverage-html tests/coverage"
        ],
        "phpcs": [
            "@php ./vendor/bin/phpcs"
        ],
        "phpcbf": [
            "@php ./vendor/bin/phpcbf"
        ],
        "phpstan": [
            "@php ./vendor/bin/phpstan analyse"
        ],
        "lint": [
            "@phpcs",
            "@phpstan"
        ],
        "all": [
            "@lint",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
